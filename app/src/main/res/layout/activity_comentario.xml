<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ComentarioActivity">


    <ListView
        android:id="@+id/lista_comentarios"
        android:layout_width="wrap_content"
        android:layout_height="515dp"
        android:layout_above="@+id/txtComent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:dividerHeight="16dp"
        android:divider="@null"
        android:layout_marginTop="7dp">

    </ListView>

    <EditText
        android:id="@+id/txtComent"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/borda_arredondada"
        android:ems="10"
        android:gravity="top|left"

        android:hint="Escreva um comentÃ¡rio"
        android:inputType="textMultiLine"
        android:lines="1"


        android:paddingLeft="14dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textColorHint="#808080"


        />

    <Button
        android:id="@+id/btnComent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtComent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="-5dp"
        android:drawableLeft="@drawable/baseline_send_24" />

</RelativeLayout>